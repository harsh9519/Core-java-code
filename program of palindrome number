package palindrome;

public class D {

	public static void main(String[] args) {
		
		int num = 121;
		int a = num;
		String temp ="";
		
		while(num>=1)
		{
		
		   	int b = num%10;
			num = num/10;
			temp+=b;
		}
		
		if (temp.equals(a+""))
		{
			System.out.println("palindrome");
		}
		else
		{
			System.out.println("mot palinfrome");
		}
		
		// TODO Auto-generated method stub

	}

}

